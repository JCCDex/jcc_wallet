{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018"],
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "noUnusedLocals": true,
    "declaration": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
